# Environment Configuration
# Copy this file to .env.development for local development
# Copy this file to .env.production for production deployment

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here

# App Configuration
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_SHOP_NAME="Your Sandwich Shop"
NEXT_PUBLIC_SHOP_EMAIL=orders@yourdomain.com
NEXT_PUBLIC_SHOP_PHONE="+1234567890"

# Business Contact Information
NEXT_PUBLIC_SHOP_PHONE_NUMBER="+33 6 52 41 39 01"

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com

# Stripe Configuration
# Use sk_test_* and pk_test_* for development
# Use sk_live_* and pk_live_* for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
